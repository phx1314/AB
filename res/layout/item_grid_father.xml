<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff">

    <LinearLayout android:id="@+id/mLinearLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:background="@drawable/bg_xiangce" android:gravity="center" android:padding="@dimen/j10dp">

        <com.mdx.framework.widget.MImageView android:id="@+id/mMImageView" android:layout_width="@dimen/j120dp" android:layout_height="@dimen/j100dp" android:layout_marginLeft="@dimen/j3dp" android:scaleType="centerCrop" android:src="@drawable/default_image"/>
    </LinearLayout>

    <TextView android:id="@+id/mTextView_count" style="@style/text_style_13_gray" android:layout_width="@dimen/j40dp" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="@dimen/j100dp" android:background="@drawable/bt_xiangce" android:gravity="center" android:text="29"/>

    <TextView android:id="@+id/mTextView_name" style="@style/text_style_13_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/mLinearLayout" android:layout_centerHorizontal="true" android:layout_marginTop="@dimen/j10dp" android:gravity="center" android:text="camera"/>

</RelativeLayout>