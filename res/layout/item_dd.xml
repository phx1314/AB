<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/mLinearLayout_zhanghu_ca"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/mLinearLayout_zhanghu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_zhanghu"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mTextView_username"
                    style="@style/text_style_15_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_zhanghu"
                    android:drawablePadding="@dimen/j10dp"
                    android:text="用户：XC001，欢迎您..." />
            </LinearLayout>

            <TextView
                android:id="@+id/mTextView_liubai"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j13dp"
                android:background="#f2f2f2"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/mLinearLayout_lan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dingdan"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/j10dp"
                android:paddingRight="@dimen/j10dp" >

                <TextView
                    android:id="@+id/mTextView_ddbianhao"
                    style="@style/text_style_13_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号：20231321321" />

                <TextView
                    android:id="@+id/mTextView_dd_state"
                    style="@style/text_style_13_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代付款" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mImageView_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mLinearLayout_zhanghu_ca"
            android:layout_marginBottom="@dimen/j15dp"
            android:layout_marginLeft="@dimen/j8dp"
            android:src="@drawable/bt_delete_n" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingTop="@dimen/j10dp" >

        <LinearLayout
            android:id="@+id/mLinearLayout_bg"
            android:layout_width="@dimen/j57dp"
            android:layout_height="@dimen/j62dp"
            android:background="@drawable/xiangce_bg"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/j13dp"
                android:layout_marginLeft="@dimen/j3dp"
                android:layout_marginRight="@dimen/j3dp"
                android:layout_marginTop="@dimen/j15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_taili_bg"
            android:layout_width="@dimen/j57dp"
            android:layout_height="@dimen/j62dp"
            android:background="@drawable/bg_tailidd"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView_taili"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/j15dp"
                android:layout_marginLeft="@dimen/j3dp"
                android:layout_marginRight="@dimen/j3dp"
                android:layout_marginTop="@dimen/j13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_mxp_bg"
            android:layout_width="@dimen/j57dp"
            android:layout_height="@dimen/j62dp"
            android:background="@drawable/bg_mxpdd"
            android:orientation="horizontal" >

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView_mxp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/j2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j12dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mTextView_name"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="照片书*1" />

                <TextView
                    android:id="@+id/mTextView_yulan"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/j10dp"
                    android:drawableLeft="@drawable/ic_yulan"
                    android:drawablePadding="@dimen/j3dp"
                    android:text="预览"
                    android:textColor="#15A50B" />

                <TextView
                    android:id="@+id/mTextView_price"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/j10dp"
                    android:text="￥89.00" />
            </LinearLayout>

            <TextView
                android:id="@+id/mTextView_time"
                style="@style/text_style_13_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j10dp"
                android:layout_marginTop="@dimen/j8dp"
                android:singleLine="true"
                android:text="下单时间：2015-08-09" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j12dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mTextView_yh"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="优惠  ￥10.00" />

                <TextView
                    android:id="@+id/mTextView_shiji"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/j10dp"
                    android:text="实付款：￥89.00" />
            </LinearLayout>

            <ImageView
                android:id="@+id/mImageView_fu"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/j8dp"
                android:background="#cccccc"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mTextView_fukuan"
                style="@style/text_style_13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/j10dp"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/bt_fukuan_n"
                android:gravity="center"
                android:text="付款"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j1dp"
        android:layout_marginTop="@dimen/j10dp"
        android:background="@drawable/bg_yinying" />

</LinearLayout>