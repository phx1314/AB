<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feiye"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/j2dp" >

        <LinearLayout
            android:id="@+id/mLinearLayout_left"
            android:layout_width="@dimen/j215dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j3dp"
            android:background="@drawable/bg_leftpage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mTextView_yeshu"
                style="@style/text_style_13_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j13dp"
                android:layout_marginTop="@dimen/j16dp"
                android:gravity="right"
                android:text="13 / 21" />

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView_left"
                android:layout_width="@dimen/j180dp"
                android:layout_height="@dimen/j120dp"
                android:layout_marginLeft="@dimen/j15dp"
                android:layout_marginRight="@dimen/j13dp"
                android:layout_marginTop="@dimen/j5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image" />

            <EditText
                android:id="@+id/mEditText_left"
                style="@style/text_style_11_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j15dp"
                android:layout_marginRight="@dimen/j13dp"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/bg_neiye"
                android:gravity="right|center_vertical"
                android:hint="请输入..."
                android:padding="@dimen/j3dp"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/mLinearLayout_left_feiye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/j90dp"
                android:background="@drawable/bg_yuanjiao"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/j4dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扉页"
                    android:textColor="#334ef5"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/mEditText_title"
                    style="@style/text_style_11_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="标题"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_right"
            android:layout_width="@dimen/j215dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/j1dp"
            android:background="@drawable/bg_rightpage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mTextView_yeshu_right"
                style="@style/text_style_13_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j13dp"
                android:layout_marginTop="@dimen/j16dp"
                android:gravity="left"
                android:text="13 / 21"
                android:visibility="gone" />

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView_right"
                android:layout_width="@dimen/j180dp"
                android:layout_height="@dimen/j120dp"
                android:layout_marginLeft="@dimen/j13dp"
                android:layout_marginRight="@dimen/j15dp"
                android:layout_marginTop="@dimen/j5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image"
                android:visibility="gone" />

            <EditText
                android:id="@+id/mEditText_right"
                style="@style/text_style_11_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j15dp"
                android:layout_marginRight="@dimen/j13dp"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/bg_neiye"
                android:gravity="right|center_vertical"
                android:hint="请输入..."
                android:padding="@dimen/j3dp"
                android:singleLine="true"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/mLinearLayout_right_feiye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/j90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/j4dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/mTextView_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yuanjiao"
                    android:gravity="center"
                    android:text="扉页"
                    android:textColor="#334ef5"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/mTextView_d3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/j5dp"
                    android:drawableTop="@drawable/add"
                    android:gravity="center"
                    android:text="修改书页"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/mEditText_title_right"
                    style="@style/text_style_11_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="标题"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>